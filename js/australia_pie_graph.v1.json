{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 400,
  "title": "Top 3 crop produce in Australia",
  "config": {
    "axis": {
      "grid": true,
      "gridColor": "#be0000"
    },
    "background": "#87c2fd"
  },  
  "data": {
    "url" : "https://raw.githubusercontent.com/CheahMengYew/visualization/main/data/Australia_fruits(2018).csv"
  },
  "layer": [{
    "mark": {"type": "arc", "innerRadius": 10, "stroke": "#fff"}
  },{
    "mark": {"type": "text",
            "radiusOffset": 22},
    "encoding": {
      "text": {"field": "Item", "type": "nominal"},
      "opacity":{
          "condition": {
                        "test": "datum['Item'] == 'Grapes' || datum['Item'] == 'Bananas' ||  datum['Item'] == 'Oranges' || datum['Item'] == 'Others'",
                        "value": 1
                      },
                      "value" : 0 
                }
    }

  }],
  
  "encoding": {
    "theta": {"field": "Value", "type": "quantitative","stack": true},
    "radius": {"field": "Value", "scale": {"type": "sqrt", "zero": true, "rangeMin": 100}},
    "color": {"field": "Item", "type": "nominal", "legend": null 
              ,"scale": {
              "domain": ["Melons, other (inc.cantaloupes)", "Apples", "Bananas", "Oranges" , "Grapes" , "Others"],
              "range": ["#1b9e77", "#d95f02", "#7570b3", "#e7298a" ,"#66a61e" , "#e6ab02" ]
              }}
  },
  "view": {"stroke": null} 
}