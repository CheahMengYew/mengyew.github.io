{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 400,
  "title": "Top 3 crop produce in China",
  "config": {"background": "#87c2fd", 
    "title": {"font" : "Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif" , "fontSize" : "30" , "color"  :"#eb3434"}},
  "data": {
    "url": "https://raw.githubusercontent.com/CheahMengYew/visualization/main/data/China_fruit(2018).csv"
  },
  "layer": [
    {"mark": {"type": "arc", "innerRadius": 10, "stroke": "#fff"}},
    {
      "mark": {"type": "text", "radiusOffset": 22},
      "encoding": {
        "text": {"field": "Item", "type": "nominal"},
        "opacity": {
          "condition": {
            "test": "datum['Item'] == 'Vegetables, fresh nes' || datum['Item'] == 'Maize' ||  datum['Item'] == 'Rice, paddy' || datum['Item'] == 'Others '",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "encoding": {
    "theta": {"field": "Value", "type": "quantitative", "stack": true},
    "radius": {
      "field": "Value",
      "scale": {"type": "sqrt", "zero": true, "rangeMin": 100}
    },
    "color": {
      "field": "Item",
      "type": "nominal",
      "legend": null,
      "scale": {
        "domain": [
          "Rice, paddy",
          "Sugar cane",
          "Wheat",
          "Vegetables, fresh nes",
          "Potatoes",
          "Maize",
          "Others "
        ],
        "range": [
          "#eb3434",
          "#8a8a8a",
          "#8a8a8a",
          "#ff8400",
          "#8a8a8a",
          "#fff700",
          "#8a8a8a"
        ]
      }
    }
  },
  "view": {"stroke": null}
}