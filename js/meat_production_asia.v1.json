{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Meat In each region",
  "width": 200,
  "height": 300,
  "config": {
    "background": "#8FBC8F",
    "title": {
      "font": "Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif",
      "fontSize": "40",
      "color": "aliceblue"
    },
    "legend": {
      "labelFont": "sans-serif",
      "labelColor": "aliceblue",
      "labelFontSize": "10",
      "titleFont": "sans-serif",
      "titleFontSize": "15",
      "titleColor": "aliceblue"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/CheahMengYew/visualization/main/data/TonnesOfMeatPerRegion.csv"
  },
  "transform": [
    {
      "aggregate": [{"op": "sum", "field": "Value", "as": "mean_acc"}],
      "groupby": ["Area", "Year"]
    }
  ],
  "selection": {
    "continent_highlight": {
      "type": "multi",
      "fields": ["Area"],
      "bind": "legend"
    }
  },
  "mark": "area",
  "encoding": {
    "x": {"timeUnit": "year", "field": "Year", "axis": {"format": "%Y"}},
    "y": {"aggregate": "sum", "field": "mean_acc", "title": ""},
    "color": {
      "field": "Area",
      "title": "region",
      "type": "nominal",
      "scale": {
        "domain": [
          "Africa",
          "Northern America",
          "South America",
          "Asia",
          "Europe",
          "Oceania"
        ],
        "range": [
          "#8a8a8a",
          "#fff700",
          "#8a8a8a",
          "#eb3434",
          "#ff8400",
          "#8a8a8a"
        ]
      }
    },
    "opacity": {
      "condition": {"selection": "continent_highlight", "value": 0.8},
      "value": 0.1
    },
    "tooltip": [
      {
        "field": "mean_acc",
        "type": "quantitative",
        "title": "Aggregated Total(Tonnes)"
      }
    ]
  },
  "view": {"stroke": null}
}