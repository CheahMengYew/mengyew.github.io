{
        "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
        "title" : "Meat Production In each region",
        "width":150, "height": 200,
              "config": {
              "background": "#87c2fd"
          },
      "data": { "url": "https://raw.githubusercontent.com/CheahMengYew/visualization/main/data/TonnesOfMeatPerRegion.csv" },
        "transform": [
        {
          "aggregate": [{
           "op": "sum",
           "field": "Value",
           "as": "mean_acc"
          }],
          "groupby": ["Area" , "Year"]
        }
        ],
          "selection": {
                "continent_highlight": {
                "type": "multi",
                "fields": ["Area"],
                "bind": "legend"
        }
        },
        "mark": "area",
        "encoding": {
          "x": {
            "timeUnit": "year", "field": "Year",
            "axis": {"format": "%Y"}
          },
          "y": {
            "aggregate": "sum", "field": "mean_acc",
            "axis" : null 
          },
          "color": {
            "field": "Area",
            "title" : "region",
            "type": "nominal",
            "scale": {
                  "domain": ["Africa", "Northern America", "South America", "Asia" , "Europe" , "Oceania"],
                  "range": ["#1b9e77", "#d95f02", "#7570b3", "#e7298a" , "#66a61e" , "#e6ab02"]
            }
          },
            "opacity": {
                  "condition": {"selection":"continent_highlight", "value": 0.8},
                  "value": 0.1
          }
        }
      }